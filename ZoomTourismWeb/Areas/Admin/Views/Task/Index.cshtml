@using ZoomTourism.Models;

@model IEnumerable<ATask>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_AdminLayout"; // Specify the user layout
}
<head>

    <link rel="stylesheet" href="~/css/TasksView.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Employees.css" asp-append-version="true" />

    <title>Tasks</title>

</head>
<div class="newestLeads">
<div class="add-employee-button-container">
        <a asp-action="AdminDashboard" asp-controller="Home" asp-area="Admin">← back</a>
        <a asp-action="Upsert" asp-controller="Task" asp-area="Admin">Add a new task</a>
</div>
<div class="tasks-container">
    @foreach (var task in Model.OrderByDescending(p => p.DueDate).ToList())
            {
       
        <div class="task-1">

            <h3> @task.Title <span id="task-number">@task.DueDate.ToString("dd / MMM")</span></h3>
        <p>
                @task.Description
        </p>
                <a href="/Admin/Task/Upsert?id=@task.Id">Edit</a>
    </div>
    }
</div>
</div>