@model IEnumerable<ZoomTourism.Models.Report>

<h2>Reports</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Description</th>
                <th>Phone Number</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var report in Model)
            {
                <tr>
                    <td>@report.Id</td>
                    <td>@report.Description</td>
                    <td>@report.PhoneNumber</td>
                    <td>
                        @if (!string.IsNullOrEmpty(report.ImageUrl))
                        {
                            <img src="@report.ImageUrl" alt="Report Image" width="100" height="100" />
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No reports available.</p>
}